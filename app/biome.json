{
	"$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
	"root": true,
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	},
	"files": {
		"includes": [
			"**",
			"!node_modules",
			"!dist",
			"!build",
			"!coverage",
			"!.next",
			"!out",
			"!storybook-static"
		],
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": false,
		"indentStyle": "tab",
		"lineWidth": 100,
		"bracketSpacing": true,
		"expand": "auto",
		"useEditorconfig": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noUnknownAtRules": "info"
			},
			"style": {
				"useConst": "off"
			}
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "all",
			"semicolons": "always",
			"arrowParentheses": "asNeeded",
			"operatorLinebreak": "after"
		},
		"jsxRuntime": "transparent"
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		},
		"linter": {
			"enabled": true
		}
	},
	"html": {
		"formatter": {
			"enabled": true,
			"indentScriptAndStyle": true
		}
	},
	"graphql": {
		"formatter": {
			"enabled": true
		},
		"linter": {
			"enabled": true
		}
	},
	"overrides": [
		{
			"includes": [
				"**/*.{config,rc}.{js,ts,cjs,mjs,cts,mts}",
				"scripts/**",
				"server/**",
				"api/**"
			]
		},
		{
			"includes": [
				"**/*.{test,spec}.{js,ts,tsx}"
			]
		}
	]
}