{
	"name": "art-ecommerce",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"workspaces": [
		"apps/*",
		"services/*"
	],
	"scripts": {
		"dev": "concurrently \"bun run --cwd ui/web dev\" \"bun run --cwd api dev\"",
		"dev:api": "bun --filter api dev",
		"dev:web": "bun --filter web dev",
		"build": "bun --filter web build",
		"lint": "biome check --write . && prettier . --write"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@types/bun": "^1.3.2",
		"concurrently": "^9.2.1",
		"prettier": "3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"dotenv": "^17.2.3",
		"ky": "^1.14.0",
		"tsx": "^4.20.6"
	}
}
